@model UpdateUserModel
@{
    ViewData["Title"] = "ویرایش ادمین";
}
@section Styles{
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
}
<div class="content">
    <h1 class="text-center bg-warning fw-bold p-1" style="font-family:nazanin;font-size:30px">ویرایش ادمین</h1>
    <form method="post" class="p-5 border border-2 border-secondary shadow">
        <div class="container">
            <div class="row justify-content-center text-end">
                <div class="col-sm-6 mt-3">
                    <div class="input-group">
                        <input asp-for="UserName" type="text" class="form-control text-end" placeholder="نام کاربری" />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mt-3">
                    <div class="input-group">
                        <input asp-for="OldPassword" type="password" class="form-control text-end" placeholder="رمز عبور فعلی" />
                    </div>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mt-3">
                    <div class="input-group">
                        <input asp-for="NewPassword" type="password" class="form-control text-end" placeholder="رمز عبور جدید" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mt-3">
                    <div class="input-group">
                        <input asp-for="ConfirmNewPassword" type="password" class="form-control text-end" placeholder="تایید رمز عبور جدید" />
                    </div>
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div><br />
                <div class="text-center mt-5">
                    <button id="button" type="submit" class="btn btn-success fw-bold p-2">ویرایش</button>
                </div>
            </div>
    </form>
</div>






@section scripts{
    <partial name="_ValidationScriptsPartial" />
}


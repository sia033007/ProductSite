@model AdminModel
@{
    ViewData["Title"] = "Enter";
}
@section Styles{
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true"/>
}
<style>
        body {
            background: #161616;
        }
</style>
<div class="content">
    <h1 class="text-center bg-warning fw-bold p-4"></h1>
    <form method="post" class="p-5 border border-2 border-secondary shadow" id="myForm">
        <div class="container">
            <div class="row justify-content-center text-end">
                <div class="col-sm-5 mt-3">
                    <div class="input-group">
                        <input asp-for="UserName" type="text" class="form-control" placeholder="User name" />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="col-sm-5 mt-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">

                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div> <br />
            <div class="mt-3 text-center">
                <button id="button" type="submit" class="btn btn-warning p-2 fw-bold">Enter</button>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
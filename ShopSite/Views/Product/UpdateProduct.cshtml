@model Product
@using ShopSite.Data;
@inject AppDb _appDb;
@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.2.7/css/fileinput.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
}
    @{
    ViewData["Title"] = "Update Product";
}
@{
    var categories = _appDb.Categories.ToList();
}
<div class="content">
    <h1 class="text-center bg-warning fw-bold p-1" style="font-family:nazanin;font-size:30px">ویرایش محصول</h1>
    <form method="post" class="p-5 border border-2 border-secondary shadow" enctype="multipart/form-data" id="myForm">
        <div class="container">
            <div class="row justify-content-center text-end">
                <div class="col-sm-5 mt-3">
                    <div class="input-group">
                        <input asp-for="Name" type="text" class="form-control text-end" placeholder="نام محصول" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-sm-5 mt-3">
                    <div class="input-group">
                        <input asp-for="Quantity" type="number" class="form-control text-end" placeholder="تعداد" />
                    </div>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="col-sm-5 mt-3">
                    <div class="input-group">
                        <input asp-for="Price" type="text" class="form-control text-end" placeholder="قیمت" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-sm-5 mt-3">
                    <div class="input-group">
                        <input asp-for="OldPrice" type="text" class="form-control text-end" placeholder="قیمت قبلی" />
                    </div>
                </div>
                <div class="col-sm-5 mt-3" style="direction:ltr;">
                    <input id="input-b2" asp-for="Picture" accept="image/png" type="file" class="file" data-show-preview="false" data-show-caption="true" data-msg-placeholder="انتخاب عکس">

                </div>
                <div class="col-sm-5 mt-3">
                    <label for="select" class="mx-2 text-muted fw-bold">انتخاب دسته بندی</label>
                    <select asp-for="CategoryId" class="mt-3" id="select">
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="col-sm-5 mt-3">
                </div>

                <br />
                <div class="text-center mt-3">
                    <button id="button" type="submit" class="btn btn-success fw-bold p-2">ویرایش محصول</button>
                </div>
            </div>
    </form>
</div>






@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.2.7/js/fileinput.min.js"></script>
}

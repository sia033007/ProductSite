@model Category
@{
    ViewData["title"] = "Add Category";
}
@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.2.7/css/fileinput.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
}
    <style>
        input[type=file]::file-selector-button {
            border: 2px solid #0026ff;
            padding: .2em .4em;
            border-radius: .2em;
            background-color: #0026ff;
            transition: 1s;
            color: white;
        }

        .submit-progress-bg {
            background-color: lightgray;
            opacity: .5;
        }
        body{
            background: #161616;
        }
    </style>


    <div class="content">
        <h1 class="text-center bg-warning fw-bold p-1" style="font-family:nazanin;font-size:30px">افزودن دسته بندی</h1>
        <form method="post" class="p-5 border border-2 border-secondary shadow" enctype="multipart/form-data" id="myForm">
            <div class="container">
                <div class="row justify-content-center text-end">
                    <div class="col-sm-5 mt-3">
                        <div class="input-group">
                            <input asp-for="CategoryName" type="text" class="form-control text-end" placeholder="نام دسته بندی" />
                        </div>
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="col-sm-5 mt-3" style="direction:ltr;">
                        <input id="input-b2" asp-for="Picture" accept="image/png" type="file" class="file" data-show-preview="false" data-show-caption="true" data-msg-placeholder="عکس را انتخاب کنید" required>
                    </div>
                </div> <br />
                <div class="mt-3 text-center">
                    <button id="button" type="submit" class="btn btn-success">افزودن دسته بندی</button>
                </div>
            </div>
        </form>
    </div>
    @section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.2.7/js/fileinput.min.js"></script>

    }